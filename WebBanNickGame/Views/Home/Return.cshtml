
@{
    ViewBag.Title = "Return";
    Layout = "~/Views/Shared/Layout.cshtml";
}


@model WebBanNickGame.Models.DonHang
<!DOCTYPE html>
<html>
<head>
    <title>RETURN URL FROM VNPAY</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.5.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <div class="header clearfix">
            <h3 class="text-muted">Thông tin Đơn Hàng</h3>
        </div>
        <div class="alert alert-success" role="alert">
            Trạng thái đơn hàng đã được thanh toán thành công.
        </div>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Mã Đơn Hàng</th>
                    <th>Mã Người Dùng</th>
                    <th>Ngày Đặt Hàng</th>
                    <th>Tổng Giá Trị</th>
                    <th>Mã nick</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.MaDH</td>
                    <td>@Model.MaKH</td>
                    <td>@Model.ThoiGianMua.ToString("dd/MM/yyyy")</td>
                    <td>@Model.GiaTien</td>
                    <td>@Model.MaNick</td>
                    <td><a href="@Url.Action("XemCTDonHang", new { maDonHang = @Model.MaDH})">Xem Chi Tiết</a></td>
                </tr>
            </tbody>
        </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.5.0/dist/js/bootstrap.min.js"></script>
</body>
</html>



