@model WebBanNickGame.Models.DanhMucCT

@{
    ViewBag.Title = "Thêm Danh Mục Chi Tiết";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}


@using (Html.BeginForm("ThemCTDM", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <div class="panel panel-default">
                    <div class="panel-body">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            @Html.LabelFor(model => model.Ten, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.Ten, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Ten, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.MaDM, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.DropDownList("MaDM", (IEnumerable<SelectListItem>)ViewBag.DanhMucList, "Chọn danh mục", htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.MaDM, "", new { @class = "text-danger" })
                            </div>
                        </div>


                        <div class="form-group">
                            @Html.LabelFor(model => model.HinhAnh, "Hình đại diện", htmlAttributes: new { @class = "col-md-2 col-form-label" })
                            <div class="col-md-10">
                                <input type="file" name="image" id="HinhAnh" class="form-control" />
                                @Html.ValidationMessageFor(model => model.HinhAnh, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-3 col-md-9">
                                <input type="submit" value="Tạo mới" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            @Html.ActionLink("Quay lại danh sách", "ChiTietDanhMuc", null, new { @class = "btn btn-default" })
        </div>
    </div>
</div>
