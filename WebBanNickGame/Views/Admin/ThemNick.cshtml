@model WebBanNickGame.Models.NickLM

@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

@using (Html.BeginForm("ThemNick", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="container">
    <h2 class="text-center">Thêm Nick</h2>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group row">
        @Html.LabelFor(model => model.TaiKhoan, "Tài khoản", htmlAttributes: new { @class = "col-md-2 col-form-label" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.TaiKhoan, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TaiKhoan, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(model => model.MatKhau, "Mật khẩu", htmlAttributes: new { @class = "col-md-2 col-form-label" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(model => model.Rank, htmlAttributes: new { @class = "col-md-2 col-form-label" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Rank, "Rank", new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Rank, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(model => model.Tuong, "Số tướng", htmlAttributes: new { @class = "col-md-2 col-form-label" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Tuong, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Tuong, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(model => model.TrangPhuc, "Số trang phục", htmlAttributes: new { @class = "col-md-2 col-form-label" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.TrangPhuc, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TrangPhuc, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(model => model.HinhAnh, "Hình đại diện", htmlAttributes: new { @class = "col-md-2 col-form-label" })
        <div class="col-md-10">
            <input type="file" name="image" id="HinhAnh" class="form-control" />
            @Html.ValidationMessageFor(model => model.HinhAnh, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        <label for="title" class = "col-md-2 col-form-label">Tất cả hình ảnh</label>
        <div class="col-md-10">
            <input type="file" name="HinhAnhTatCa" id="HinhAnhTatCa" class="form-control" multiple />
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(model => model.MaCTDanhMuc, "Danh mục chi tiết", htmlAttributes: new { @class = "col-md-2 col-form-label" })
        <div class="col-md-10">
            <select id="MaCTDanhMuc" name="MaCTDanhMuc" class="form-control">
                <option value="">Chọn danh mục</option>
                @foreach (var danhMuc in ViewBag.DanhMucList)
                {
                    <option value="@danhMuc.Value">@danhMuc.Text</option>
                }
            </select>
            @Html.ValidationMessageFor(model => model.MaCTDanhMuc, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group row">
        @Html.LabelFor(model => model.Gia, "Giá", htmlAttributes: new { @class = "col-md-2 col-form-label" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Gia, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Gia, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group row">
        <div class="col-md-10 offset-md-2">
            <button type="submit" class="btn btn-primary">Lưu</button>
        </div>
    </div>
</div>
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            @Html.ActionLink("Quay lại danh sách", "Nick", null, new { @class = "btn btn-secondary" })
        </div>
    </div>
</div>
