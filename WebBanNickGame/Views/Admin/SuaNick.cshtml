@model WebBanNickGame.Models.NickLM

@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

@using (Html.BeginForm("SuaNick", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="container">
    <h2 class="text-center">Sửa Nick</h2>
    <hr />

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.HiddenFor(model => model.MaNick)

    @Html.HiddenFor(model => model.TaiKhoan)
    @Html.HiddenFor(model => model.MatKhau)

    <div class="form-group">
        @Html.LabelFor(model => model.Rank, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Rank, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Rank, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Tuong, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Tuong, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Tuong, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.TrangPhuc, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.TrangPhuc, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TrangPhuc, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.HinhAnh, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="file" id="image" name="image" accept="image/*" class="form-control" />
            @Html.ValidationMessageFor(model => model.HinhAnh, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label for="title" class="col-md-2 col-form-label">Tất cả hình ảnh</label>
        <div class="col-md-10">
            <input type="file" name="HinhAnhTatCa" id="HinhAnhTatCa" class="form-control" multiple />
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.MaCTDanhMuc, "Danh mục chi tiết", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <select id="MaCTDanhMuc" name="MaCTDanhMuc" class="form-control">
                <option value="">Chọn danh mục</option>
                @foreach (var danhMuc in ViewBag.DanhMucList)
                {
                    <option value="@danhMuc.Value">@danhMuc.Text</option>
                }
            </select>
            @Html.ValidationMessageFor(model => model.MaCTDanhMuc, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Gia, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Gia, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Gia, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-primary">Lưu</button>
        </div>
    </div>
</div>
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            @Html.ActionLink("Quay lại danh sách", "Index")
        </div>
    </div>
</div>
